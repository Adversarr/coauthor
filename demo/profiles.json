{
  "llms": {
    "defaultProfile": "fast",
    "clientPolicies": {
      "bailian_default": {
        "openaiCompat": {
          "enableThinking": true
        }
      },
      "bailian_search": {
        "openaiCompat": {
          "enableThinking": true
        },
        "provider": {
          "bailian": {
            "thinkingBudget": 256
          }
        }
      }
    },
    "profiles": {
      "fast": { "model": "qwen3.5-plus", "clientPolicy": "bailian_search" },
      "writer": { "model": "qwen3.5-plus", "clientPolicy": "bailian_search" },
      "reasoning": { "model": "qwen3.5-plus", "clientPolicy": "bailian_search" },
      "research_web": { "model": "qwen3.5-plus", "clientPolicy": "bailian_search" }
    }
  },
  "mcp": {
    "servers": {
      "arxiv": {
        "enabled": true,
        "transport": {
          "type": "stdio",
          "command": "uv",
          "args": ["tool", "run", "arxiv-mcp-server"],
          "env": {
            "ARXIV_STORAGE_PATH": "./.tmp/arxiv_storage"
          }
        },
        "startupTimeoutMs": 30000,
        "toolTimeoutMs": 60000,
        "includeTools": [],
        "excludeTools": [],
        "risk": {
          "default": "risky",
          "safeReadOnlyHint": false,
          "safeTools": ["search_papers", "list_papers", "read_paper"]
        }
      }
    }
  }
}
